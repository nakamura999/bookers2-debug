
<div class="row">
	<div class="col-xs-3">

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

	</div>

	<div class="col-xs-9">
		<h2>Book detail</h2>

		<table class="table">
				<tr>
					<td>
						<%= link_to (@book_detail.user) do %>
						<%= attachment_image_tag(@book_detail.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book_detail.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book_detail.title, @book %></td>
					<td><%= @book_detail.body %></td>

					<% if current_user.id == @book_detail.user_id %>
					<td><%= link_to "Edit",edit_book_path(@book_detail.id), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",book_path(@book_detail.id), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% else %>
					  <td></td>
                      <td></td>
                    <% end %>
				</tr>
			</table>

	</div>
</div>

